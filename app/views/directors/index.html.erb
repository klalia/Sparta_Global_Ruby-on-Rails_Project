<p id="notice"><%= notice %></p>

<style>
  .hidden{
    display: none;
  }
</style>

<h1>Directors</h1>
<br>
<img src="cover.png" height="150px" width="135px" align="left">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th class="hidden">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @directors.each do |director| %>
      <tr>
        <td><%= director.name %></td>
        <td class="hidden"><%= director.user_id %></td>
        <td><%= link_to 'Show', director, :class => 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_director_path(director), :class => 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', director, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Director', new_director_path, :class => 'btn btn-primary' %>
